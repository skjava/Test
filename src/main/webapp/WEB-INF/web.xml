<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Action</servlet-name>
        <servlet-class>ua.recber.test.Action</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionServlet</servlet-name>
        <servlet-class>ua.recber.servlet.ActionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActionServlet2</servlet-name>
        <servlet-class>ua.recber.servlet.ActionServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Action</servlet-name>
        <url-pattern>/1.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionServlet</servlet-name>
        <url-pattern>/action.ua</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActionServlet2</servlet-name>
        <url-pattern>/action2.ua</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
